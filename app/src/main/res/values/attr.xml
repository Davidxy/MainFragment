<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="item_count" format="integer"></attr>
    <attr name="ratio" format="integer"></attr>
    <attr name="change_color" format="color"></attr>
    <attr name="choose_shape" format="integer">
        <enum name="rect" value="0" />
        <enum name="triangle" value="1" />
    </attr>
    <attr name="normal_color" format="color"/>
    <declare-styleable name="ViewPagerIndicator">
        <attr name="item_count" />
        <attr name="choose_shape" />
        <attr name="ratio" />
        <attr name="normal_color" />
        <attr name="change_color" />
        <attr name="android:tint" />
        <attr name="drawablePosition" format="integer">
            <enum name="left" value="1"></enum>
            <enum name="right" value="2"></enum>
            <enum name="top" value="3"></enum>
            <enum name="bottom" value="4"></enum>
        </attr>
        <attr name="indicator_color" format="color" />
    </declare-styleable>
    <attr name="imageortext" format="integer">
        <enum name="image" value="1" />
        <enum name="text" value="2" />
        <enum name="justheadertext" value="3" />
    </attr>
    <!-- 带有android开头的,是引用Android本身提供的属性,其它的是自定义属性 -->
    <declare-styleable name="AllDirectionImageText">
        <attr name="direction" format="integer">
            <enum name="top" value="2"></enum>
            <enum name="bottm" value="3"></enum>
            <enum name="left" value="0"></enum>
            <enum name="right" value="1"></enum>
        </attr>

        <attr name="imageortext"></attr>
        <attr name="android:layout_margin"></attr>
        <attr name="src_width" format="dimension"></attr>
        <attr name="android:src"></attr>
        <attr name="android:textColor"></attr>
        <attr name="android:textSize"></attr>
        <attr name="android:text"></attr>
        <attr name="android:padding"></attr>
        <attr name="android:tint"></attr>
    </declare-styleable>


    <attr name="drawable_width" format="dimension" />
    <attr name="paddingCenter" format="boolean" />
    <!-- 定义形状 -->
    <attr name="shapeType" format="integer">
        <enum name="rect" value="1" />
        <enum name="oval" value="2" />
        <enum name="corner_rect" value="3" />
    </attr>
    <attr name="p_radius" format="dimension" />
    <!-- 设置图像和文字居中显示,两边的距离相等,并且是动态测量之后设置-->
    <!-- 设置左边,右边,顶部,底部的图片的大小-->
    <attr name="leftDrawableWidth" format="dimension" />
    <attr name="righDrawableWidth" format="dimension" />
    <attr name="topDrawableWidth" format="dimension" />
    <attr name="bottomDrawableWidth" format="dimension" />

    <declare-styleable name="PowerButton" parent="DrawableEditText">
        <!-- 背景颜色用来放置颜色,只能是纯色的,然后根据这个颜色,来设置自动生成一个或浅或深的颜色-->
        <attr name="android:background" />
        <!--  在指定设置的图片的大小,当设置了可以设置drawableLeft和drawableRight两个图片的,
        以及大小,其他控件只要是有使用这个属性的,也是类似 -->
        <attr name="drawable_width" />
        <!--- 是否居中,默认情况下是居中的-->
        <attr name="paddingCenter" />
        <!-- 设置左边,右边,上边,下边的图片 -->
        <attr name="android:drawableLeft" />
        <attr name="android:drawableRight" />
        <attr name="android:drawableTop" />
        <attr name="android:drawableBottom" />
        <!-- 设置图片的渲染颜色 -->
        <attr name="android:tint" />
        <!-- 设置按钮背景的形态,可以是圆形,矩形,圆角矩形 -->
        <attr name="shapeType" />
        <attr name="p_radius" />
        <attr name="leftDrawableWidth" />
        <attr name="righDrawableWidth" />
        <attr name="topDrawableWidth" />
        <attr name="bottomDrawableWidth" />
    </declare-styleable>

</resources>